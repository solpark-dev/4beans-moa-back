<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <!-- 로그 저장 경로 -->
    <property name="LOG_PATH" value="${user.dir}/logs"/>
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%X{traceId:-N/A}] [%X{userId:-anonymous}] [%thread] %-5level %logger{36} - %msg%n"/>

    <!-- ===== Console Appender ===== -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ===== File Appender (전체 로그) ===== -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/moa.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archive/moa.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ===== Error File Appender (에러만 별도 수집) ===== -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/error.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archive/error.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>90</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ===== Payment/Settlement File Appender (결제/정산 전용) ===== -->
    <appender name="PAYMENT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/payment.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archive/payment.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>365</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ===== Logger 설정 ===== -->
    
    <!-- 결제/정산 관련 로거 (항상 INFO 레벨, 별도 파일 저장) -->
    <logger name="com.moa.service.payment" level="INFO" additivity="true">
        <appender-ref ref="PAYMENT_FILE"/>
    </logger>
    <logger name="com.moa.service.settlement" level="INFO" additivity="true">
        <appender-ref ref="PAYMENT_FILE"/>
    </logger>
    <logger name="com.moa.service.deposit" level="INFO" additivity="true">
        <appender-ref ref="PAYMENT_FILE"/>
    </logger>
    <logger name="com.moa.scheduler" level="INFO" additivity="true">
        <appender-ref ref="PAYMENT_FILE"/>
    </logger>

    <!-- 프레임워크 로거 (불필요한 로그 억제) -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.springframework.security" level="INFO"/>
    <logger name="org.mybatis" level="INFO"/>
    <logger name="org.apache" level="WARN"/>
    <logger name="com.zaxxer.hikari" level="INFO"/>

    <!-- ===== 개발 환경 (기본) ===== -->
    <springProfile name="default,local,dev">
        <logger name="com.moa" level="DEBUG"/>
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </root>
    </springProfile>

    <!-- ===== 운영 환경 ===== -->
    <springProfile name="prod,production">
        <logger name="com.moa" level="INFO"/>
        <root level="WARN">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </root>
    </springProfile>

</configuration>

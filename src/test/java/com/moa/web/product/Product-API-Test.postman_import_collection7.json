    {
      "name": "2. Get Product List (save productId)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/product",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8080",
          "path": [
